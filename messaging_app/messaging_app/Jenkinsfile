pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    credentialsId: 'github-credentials',
                    url: 'https://github.com/roqiaahmed/alx-backend-python.git'
            }
        }
        stage('Build') {
            steps {
                echo 'Building..'
                sh '''
                cd alx-backend-python
                pip3 install -r messaging_app/requirements.txt
                '''
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
                sh '''
                cd alx-backend-python/messaging_app
                pytest
                '''
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}